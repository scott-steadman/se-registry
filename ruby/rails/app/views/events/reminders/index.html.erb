<% if current_user != page_user %>
<h1><%= possessivize(page_user.display_name) %> Reminders</h1>
<% end %>
<%= link_to 'New', new_user_reminder_path(page_user) %>
<br/>
<%= render :partial => 'layouts/pagination', :object => @reminders %>
<table border='1' width='100%'>
  <tr>
    <th>Description</th>
    <th align='center'>Date</th>
    <th align='center'>Recurring</th>
    <th align='center'>Actions</th>
  </tr>
  <%= render @reminders %>
</table>
