<% if current_user != page_user %>
<h1><%= possessivize(page_user.display_name) %> Events</h1>
<% end %>
<%= link_to('New Occasion', new_user_occasion_path(page_user)) %>
<%= link_to('New Reminder', new_user_reminder_path(page_user)) %>
<br />
<%= render :partial=>'layouts/pagination', :object=>@events %>
<table border='1' width='100%'>
  <tr>
    <th>Description</th>
    <th>Type</th>
    <th width='20%' align='center'>Date</th>
    <th width='10%' align='center'>Recurring</th>
    <th width='10%' align='center'>Actions</th>
  </tr>
  <%= render :partial => 'event', :collection => @events %>
</table>
