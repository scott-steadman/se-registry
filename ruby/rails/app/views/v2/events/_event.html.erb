<div id='event-<%= event.id %>' class='c-item o-flex-item'>

  <h2 class='c-item__description'>
    <%= h event.description %>
    <% if params[:controller].ends_with?('events') -%>
      (<%= event.class.name %>)
    <% end -%>
  </h2>

  <div>
    <% if event.recur %>
      <label>Every:</label>
      <time><%= event.event_date.strftime('%B %d') %></time>
    <%- else -%>
      <label>On:</label>
      <time><%= event.event_date.to_s(:long) %></time>
    <%- end -%>
  </div>

  <ul class='c-item__actions o-flex-item--centered o-flex-inline'>
    Actions:
    <li><%= link_to_function 'edit', "window.events.onEditClicked(#{event.id}, '#{edit_user_event_path(page_user, event)}')", :rel => 'nofollow', :class => 'o-button' %></li>
    <li><%= delete_link_to delete_path(event), :text => 'remove', :class => 'o-button u-destructive',
                                               :confirm => "Are you sure you want to remove this #{event.event_type}?"
        %>
    </li>
  </ul>

</div>
